<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >
        
        <ImageView
            android:id="@+id/bt_vo_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/vol_down_" />

        <ImageView
            android:id="@+id/btLast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ib_last" />

        <ImageView
            android:id="@+id/btPlayOrPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ib_start" />

        <ImageView
            android:id="@+id/btStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ib_stop" />

        <ImageView
            android:id="@+id/btNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/ib_next" />
        <ImageView
            android:id="@+id/bt_vo_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/vol_up_" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvGetSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >
    </ListView>

</LinearLayout>